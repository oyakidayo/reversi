		SHLD EVALHL
		STA EVAL
		
		JP FEVAL

PICE:	MVI D,0000H		;自?E?E駒?E数
		MVI C,0000H 	;コンピュータの駒?E数
		MVI B,0040H
		LXI H,0900BH 	;コンピュータと自?E?E駒?E数を数える
ELOOP3  MVI A,0FFH
		CMP M
		JNZ ELOOP1
		INR C
ELOOP1: MVI A,001H
		CMP M
		JNZ ELOOP2
		INC D
ELOOP2	INR M
		DCR B
		JNP ELOOP3
		MOV A,C
		STA COM_PICE
		MOV A,D
		STA MAN_PICE
		SUB C			;人間?E駒?Eコンピュータの駒を返す
		RET
