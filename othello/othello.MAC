HOZON:	PUSH H
		PUSH D
		PUSH B
		LXI H,0900BH
		LXI D,BLOCK
		MVI B,08H
		MVI C,08H
HNEXT:	MOV A,M
		STAX D
		
		INX D
		INX H
		DCR B
		JNZ HNEXT
		DCR C
		INC H
		INC H
		JZ  HRETURN
		MVI B,08H
		JP  HNEXT
HRETURN:POP B
		POP D
		POP H
		RET
		
UNDO:	LXI H,0900BH
		LXI D,BLOCK
		MVI B,040H
		MVI B,08H
		MVI C,08H
UNEXT: LDAX D
		MOV M,A
		
		INX D
		INX H
		DCR B
		JNZ UNEXT
		DCR C
		INC H
		INC H
		JZ  URETURN
		MVI B,08H
		JP  UNEXT
URETURN:POP B
		POP D
		POP H
		RET
		RET
		
SUBHLBC:MOV A,L
		SUB C
		MOV L,A
		MOV A,H
		SBB B
		MOV H,A
		RET	
		
INPUT:	MVI A,0FFH		;com=ff,man=01,teban=01
		STA COM
		MVI A,01H
		STA MAN
		MVI C,01H
		
		CALL 0005H
		

		
		
		CPI 'a'
		JC INPUT
		CPI 'i'
		JNC INPUT
		SUI 'a'
		MOV B,A
INPUT2:	PUSH B
		MVI C,01H
		CALL 0005H
		POP B
		CPI '1'
		JC  INPUT2
		CPI '8'
		JNC INPUT2
		SUI '0'
		
		MOV D,A
		
		
		
		
	
		MVI C,0BH
		MVI A,00H
		
		
INEXT2:	DCR D
		JZ INEXT
		ADI 0AH
		JP  INEXT2
INEXT:	ADD C
		ADD B
		LXI H,09000H
		ADD L
		MOV L,A
		
		RET
UTENAI: MVI C,09
		LXI D,DMOV
		CALL 0005H
		RET
		
COMSIKO:XRA A
		STA TEBAN
		STA PASS 
		LXI H,START
		MVI A,01H
